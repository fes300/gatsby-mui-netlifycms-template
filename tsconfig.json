{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "jsx": "react",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["custom_typings", "node_modules/@types"],
    "skipLibCheck": true,
    "allowUnusedLabels": false,
    "noUnusedLocals": true
  },
  "include": ["./src/**/*"]
}
